{
  "name": "react-integration-test-engine",
  "version": "1.1.0",
  "description": "Integration test utils for react components",
  "repository": "git@github.com:vtaits/react-integration-test-engine.git",
  "homepage": "https://vtaits.github.io/react-integration-test-engine/",
  "license": "MIT",
  "author": "Vadim Taits",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format esm,cjs --dts --legacy-output",
    "lint": "biome check src",
    "lint:fix": "biome check src --apply-unsafe",
    "format": "biome format src --write",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "test": "yarn lint && yarn test:ts && yarn test:unit",
    "prepare": "yarn build"
  },
  "keywords": [
    "react",
    "test",
    "integration",
    "engine",
    "testing"
  ],
  "peerDependencies": {
    "@testing-library/react": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@testing-library/react": "^14.0.0",
    "@types/lodash": "^4.14.199",
    "@types/react": "^18.2.25",
    "@vitest/coverage-v8": "^0.34.6",
    "happy-dom": "^12.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
