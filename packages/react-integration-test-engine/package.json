{
  "name": "react-integration-test-engine",
  "version": "1.4.1",
  "description": "Integration test utils for react components",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vtaits/react-integration-test-engine.git"
  },
  "homepage": "https://vtaits.github.io/react-integration-test-engine/",
  "license": "MIT",
  "author": "Vadim Taits",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format esm,cjs --dts --legacy-output",
    "lint": "biome check src",
    "lint:fix": "biome check src --apply-unsafe",
    "format": "biome format src --write",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "test": "yarn lint && yarn test:ts && yarn test:unit",
    "prepare": "yarn build"
  },
  "keywords": [
    "react",
    "test",
    "integration",
    "engine",
    "testing"
  ],
  "peerDependencies": {
    "@testing-library/react": "^12.0.0 || ^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@testing-library/react": "^15.0.7",
    "@types/lodash": "^4.17.4",
    "@types/react": "^18.3.3",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-is": "^18",
    "@vitest/coverage-v8": "^1.6.0",
    "happy-dom": "^14.11.0",
    "react": "^18.3.1",
    "react-datepicker": "^6.9.0",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
